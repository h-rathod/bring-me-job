# Database connection string for PostgreSQL
# Format: postgresql://username:password@localhost:5432/bring_me_job
DATABASE_URL=1234567890
# JWT secret for authentication tokens
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server port
PORT=3001

# Node environment
NODE_ENV=development

# Google Gemini API key
GEMINI_API_KEY=your-gemini-api-key

# Embeddings model (Google)
GEMINI_EMBEDDING_MODEL=text-embedding-004

# Job aggregation
# Free option uses Remotive public API (no key required)
# If you use another API like JSearch, provide its key below:
JSEARCH_API_KEY=your-jsearch-api-key
# Limit jobs fetched per run to stay within quotas
AGGREGATOR_LIMIT=50

# YouTube API (for Skill Gap learning resources)
YOUTUBE_API_KEY=your-youtube-api-key